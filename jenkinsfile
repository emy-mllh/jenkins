Jenkinsfile (Declarative Pipeline)
pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Hi, this is imane and aymane'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('QA') {
            steps {
                echo 'QA'
            }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        stage('Monitor') {
            steps {
                echo 'Monitoring'
            }
        }
    }
}